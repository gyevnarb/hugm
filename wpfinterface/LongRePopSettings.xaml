<Window x:Class="wpfinterface.LongRePopSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfinterface"
        mc:Ignorable="d"
        Title="LongRePopSettings" Height="150" Width="300">
    <Grid>
        <Label Content="From:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="txFrom" Height="23" Margin="68,13,10,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>
        <Label Content="To:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,38,0,0"/>
        <TextBox x:Name="txTo" Height="23" Margin="68,41,10,0" TextWrapping="Wrap" Text="2" VerticalAlignment="Top"/>
        <Label Content="Step:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,69,0,0"/>
        <TextBox x:Name="txStep" Height="23" Margin="68,72,10,0" TextWrapping="Wrap" Text="0.1" VerticalAlignment="Top"/>
        <Button x:Name="btnStart" Content="Run" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="150" Click="btnStart_Click"/>
    </Grid>
</Window>
