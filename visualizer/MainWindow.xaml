<Window x:Class="visualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:visualizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="txbox" Grid.Row="0" Width="417" Text="../../data/graph.bin"></TextBox>
                <Button Click="Button_Click" RenderTransformOrigin="-1.141,0.286">Save</Button>
                <Button Click="Button_Click_1" RenderTransformOrigin="8.213,0.62" Width="79">Load</Button>
            </StackPanel>

            <Canvas x:Name="canvas" Mouse.MouseDown="Canvas_MouseDown">
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="canvasScale"></ScaleTransform>
                        <TranslateTransform x:Name="canvasTranslate"></TranslateTransform>
                    </TransformGroup>
                </Canvas.RenderTransform>
            </Canvas>
        </StackPanel> 
    </Grid>
</Window>
