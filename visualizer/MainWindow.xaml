<Window x:Class="visualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:visualizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="canvas" Mouse.MouseDown="Canvas_MouseDown">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="canvasScale"></ScaleTransform>
                    <TranslateTransform x:Name="canvasTranslate"></TranslateTransform>
                </TransformGroup>
            </Canvas.RenderTransform>
        </Canvas>        
    </Grid>
</Window>
